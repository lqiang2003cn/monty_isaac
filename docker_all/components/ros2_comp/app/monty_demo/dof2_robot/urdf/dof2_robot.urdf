<?xml version="1.0" encoding="utf-8"?>
<robot name="dof2_robot">
  <!-- 2-DOF arm: joint1 = base yaw (Z), joint2 = shoulder pitch (Y). Arm reaches in XZ plane. -->

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.1"/>
      </geometry>
      <material name="base_color">
        <color rgba="0.3 0.3 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Upper arm: extends along X from base -->
  <link name="upper_arm">
    <inertial>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004"/>
    </inertial>
    <visual>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.06 0.06"/>
      </geometry>
      <material name="upper_arm_color">
        <color rgba="0.2 0.6 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.06 0.06"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="50" velocity="1"/>
  </joint>

  <!-- Forearm: extends along X from elbow, pitched by joint2 -->
  <link name="forearm">
    <inertial>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
    </inertial>
    <visual>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
      <material name="forearm_color">
        <color rgba="0.8 0.4 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0.25 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.8" upper="2.8" effort="30" velocity="1"/>
  </joint>
</robot>
