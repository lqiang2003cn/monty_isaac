<?xml version="1.0"?>
<!-- ros2_control block for x3plus: JointStateTopicSystem (position-only, topic-based).
     Use for both Isaac Sim and real robot; same plugin, same topics.
     Include from x3plus.urdf.xacro.
     NOTE: The <robot> wrapper is required so xacro:include preserves the <ros2_control>
     element in the output (xacro strips the root element of included files). -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <ros2_control name="x3plus" type="system">
    <hardware>
      <plugin>joint_state_topic_hardware_interface/JointStateTopicSystem</plugin>
      <param name="joint_commands_topic">/x3plus/joint_commands</param>
      <param name="joint_states_topic">/x3plus/joint_states</param>
      <param name="sum_wrapped_joint_states">true</param>
    </hardware>
    <joint name="arm_joint1">
      <command_interface name="position">
        <param name="min">-1.5708</param>
        <param name="max">1.5708</param>
      </command_interface>
      <state_interface name="position"><param name="initial_value">0.0</param></state_interface>
    </joint>
    <joint name="arm_joint2">
      <command_interface name="position">
        <param name="min">-1.5708</param>
        <param name="max">1.5708</param>
      </command_interface>
      <state_interface name="position"><param name="initial_value">0.0</param></state_interface>
    </joint>
    <joint name="arm_joint3">
      <command_interface name="position">
        <param name="min">-1.5708</param>
        <param name="max">1.5708</param>
      </command_interface>
      <state_interface name="position"><param name="initial_value">0.0</param></state_interface>
    </joint>
    <joint name="arm_joint4">
      <command_interface name="position">
        <param name="min">-1.5708</param>
        <param name="max">1.5708</param>
      </command_interface>
      <state_interface name="position"><param name="initial_value">0.0</param></state_interface>
    </joint>
    <joint name="arm_joint5">
      <command_interface name="position">
        <param name="min">-1.5708</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"><param name="initial_value">0.0</param></state_interface>
    </joint>
    <joint name="grip_joint">
      <command_interface name="position">
        <param name="min">-1.54</param>
        <param name="max">0</param>
      </command_interface>
      <state_interface name="position"><param name="initial_value">-0.77</param></state_interface>
    </joint>
    <joint name="rlink_joint2">
      <param name="mimic">grip_joint</param>
      <param name="multiplier">-1</param>
      <state_interface name="position"><param name="initial_value">0.77</param></state_interface>
    </joint>
    <joint name="rlink_joint3">
      <param name="mimic">grip_joint</param>
      <param name="multiplier">1</param>
      <state_interface name="position"><param name="initial_value">-0.77</param></state_interface>
    </joint>
    <joint name="llink_joint1">
      <param name="mimic">grip_joint</param>
      <param name="multiplier">-1</param>
      <state_interface name="position"><param name="initial_value">0.77</param></state_interface>
    </joint>
    <joint name="llink_joint2">
      <param name="mimic">grip_joint</param>
      <param name="multiplier">1</param>
      <state_interface name="position"><param name="initial_value">-0.77</param></state_interface>
    </joint>
    <joint name="llink_joint3">
      <param name="mimic">grip_joint</param>
      <param name="multiplier">-1</param>
      <state_interface name="position"><param name="initial_value">0.77</param></state_interface>
    </joint>
  </ros2_control>
</robot>
