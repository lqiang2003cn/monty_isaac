{
    "name": "Isaac Sim 5.1.0 + ROS2 Jazzy",
    "dockerFile": "Dockerfile",
    "context": "..",
    
    // Build arguments
    "build": {
        "args": {
            "USERNAME": "developer",
            "USER_UID": "1000",
            "USER_GID": "1000"
        }
    },

    // Container user
    "remoteUser": "developer",

    // Run arguments for NVIDIA GPU support and Isaac Sim
    "runArgs": [
        "--gpus", "all",
        "--runtime=nvidia",
        "--network=host",
        "--privileged",
        "--ipc=host",
        "--ulimit", "memlock=-1",
        "--ulimit", "stack=67108864",
        "-e", "ACCEPT_EULA=Y",
        "-e", "PRIVACY_CONSENT=Y",
        "-e", "DISPLAY=${localEnv:DISPLAY}",
        "-e", "NVIDIA_VISIBLE_DEVICES=all",
        "-e", "NVIDIA_DRIVER_CAPABILITIES=all",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw"
    ],

    // Workspace mount
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/isaac_ros_ws/src/project,type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/isaac_ros_ws",

    // VS Code customizations
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/isaac-sim/kit/python/bin/python3",
                "python.analysis.extraPaths": [
                    "/opt/ros/jazzy/lib/python3.12/site-packages",
                    "/workspaces/isaac_ros_ws/install",
                    "/isaac-sim/exts",
                    "/isaac-sim/extscache"
                ],
                "ros.distro": "jazzy",
                "files.associations": {
                    "*.urdf": "xml",
                    "*.xacro": "xml",
                    "*.launch.py": "python",
                    "*.sdf": "xml"
                },
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "ms-iot.vscode-ros",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "twxs.cmake",
                "smilerobotics.urdf"
            ]
        }
    },

    // Features to install
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },

    // Post-create commands - use UID:GID to avoid group name issues
    "postCreateCommand": "/bin/bash -c 'sudo chown -R 1000:1000 /workspaces 2>/dev/null || true'",

    // Container environment variables
    "containerEnv": {
        "ROS_DISTRO": "jazzy",
        "ROS_DOMAIN_ID": "0",
        "RMW_IMPLEMENTATION": "rmw_fastrtps_cpp",
        "ACCEPT_EULA": "Y",
        "PRIVACY_CONSENT": "Y"
    },

    // Shut down action
    "shutdownAction": "stopContainer"
}
